<form class="companyform">
  <div class="form-group">
    <label for="title">Title</label><br> {{input class="form-control" value=title id="title" placeholder="News title"}}
  </div>
  <div class="form-group">
    <label for="message">Message</label><br> {{textarea rows=5 class="form-control" value=message id="message" placeholder="your news"}}
  </div>
  <div class="form-group">
    <label for="email">Email</label><br> {{input class="form-control" value=email id="email" placeholder="Company email"}}
  </div>
  <button {{action 'sendNotification'}} id="submit">Send</button>
          <!-- <button {{action 'hideNewsForm'}} id="cancel">Cancel</button> -->
 </form>